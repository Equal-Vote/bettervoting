{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "rootDir": ".",
    "outDir": "./build",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "ES6",
      "DOM",
      "ES2021.String", // Added for replaceAll
    ],
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*"]
}
